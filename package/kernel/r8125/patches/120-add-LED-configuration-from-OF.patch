+rtl8125_led_configuration(struct rtl8125_private *tp)
+{
+        const int led_regs[] = { CustomLED, LEDSEL_1_8125, LEDSEL_2_8125, LEDSEL_3_8125 };
+        u32 led_data[4];
+        int ret, i;
+
+        ret = of_property_read_u32_array(tp->pci_dev->dev.of_node,
